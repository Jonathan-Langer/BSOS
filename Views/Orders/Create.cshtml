@model BSOS.Models.Order
@using BSOS.Models;
@{
    ViewData["Title"] = "Create";
    if (Customer.IsManager)
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    else
        Layout = "_Layout";
}

<h1>Create</h1>

<h4>Order</h4>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <input asp-for="CustomerId" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <label class="control-label">@ViewBag.OrderDate</label>
            </div>
            <div class="form-group">
                <label for="ProductId" class="control-label"></label>
                <select name="ProductId" class="form-control" asp-items="ViewBag.ProductId" multiple></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
