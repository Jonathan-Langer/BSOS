@model IEnumerable<BSOS.Models.Product>

@{
    ViewData["Title"] = "Index";

}

<br />
<br />
<br />
<br />
<br />



<!-- Product -->
<div class="bg0 m-t-23 p-b-140">
    <div class="container">
        <div class="flex-w flex-sb-m p-b-52">
            <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                <form asp-action="ShowAllProducts">
                    <button name="cat" type="submit" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">
                        All Products
                    </button>
                </form>
                <form asp-action="SortByCategory" asp-route-Category="Women">
                    <button name="cat" type="submit" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">
                        Women
                    </button>
                </form>
                <form asp-action="SortByCategory" asp-route-Category="Men">
                    <button name="cat" cat="Men" type="submit" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">
                        Men
                    </button>
                </form>
                <form asp-action="SortByCategory" asp-route-Category="Shoes">
                    <button name="cat" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">
                        Shoes
                    </button>
                </form>

                <form asp-action="SortByCategory" asp-route-Category="Accessories">
                    <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">
                        Accessories
                    </button>
                </form>
            </div>

            <div class="flex-w flex-c-m m-tb-10">
                <div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
                    <i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
                    <i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                    Filter
                </div>

                <div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
                    <i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
                    <i class="icon-close-1search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                    Search
                </div>
            </div>

            <!-- Search product -->
            <div class="dis-none panel-search w-full p-t-10 p-b-15">
                <form asp-action="Search" asp-route-name=Name>
                    <div class="bor8 dis-flex p-l-15">
                        <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                            <i class="zmdi zmdi-search"></i>
                        </button>
                        <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="Name" placeholder="Enter Product Name">
                    </div>
                </form>
            </div>

            <!-- Filter -->
            <div class="dis-none panel-filter w-full p-t-10">
                <form asp-action="Filter" asp-route-Brand="brand" asp-route-Color="color" asp-route-Size="size">
                    <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
                        <div class="filter-col1 p-r-15 p-b-27">
                            <div class="mtext-102 cl2 p-b-15">
                                Brand
                            </div>
                            <ul>
                                @foreach (var p in (from pro in Model select pro.Brand).Distinct())
                                {
                                    <li>
                                        <input class="fs-15 lh-12 m-r-6" type="radio" name="brand" value="@p">
                                        <label class="filter-link stext-106 trans-04" for="brand">@p</label>
                                    </li>
                                }
                            </ul>
                        </div>

                        <div class="filter-col2 p-r-15 p-b-27">
                            <div class="mtext-102 cl2 p-b-15">
                                Size
                            </div>
                            <ul>
                                @foreach (var p in (from pro in Model select pro.Size).Distinct())
                                {
                                    <li class="p-b-6">
                                            <input class="fs-15 lh-12 m-r-6" type="radio" name="size" value="@p">
                                            <label class="filter-link stext-106 trans-04" for="size">@p</label>
                                    </li>
                                }
                            </ul>
                        </div>

                        <div class="filter-col3 p-r-15 p-b-27">
                            <div class="mtext-102 cl2 p-b-15">
                                Color
                            </div>
                            <ul>
                                @foreach (var p in (from pro in Model select pro.Color).Distinct())
                                {
                                    <li>
                                        <input type="radio" name="color" value="@p">
                                        <label class="filter-link stext-106 trans-04" for="color">@p</label>
                                        <br>
                                    </li>
                                }
                            </ul>
                        </div>

                        <div class="filter-col4 p-b-27">
                            <div class="mtext-102 cl2 p-b-15">
                                Tags
                            </div>

                            <div class="flex-w p-t-4 m-r--5">
                                <a href="#" class="flex-c-m stext-107 cl6 size-301 bor7 p-lr-15 hov-tag1 trans-04 m-r-5 m-b-5">
                                    Fashion
                                </a>

                                <a href="#" class="flex-c-m stext-107 cl6 size-301 bor7 p-lr-15 hov-tag1 trans-04 m-r-5 m-b-5">
                                    Lifestyle
                                </a>

                                <a href="#" class="flex-c-m stext-107 cl6 size-301 bor7 p-lr-15 hov-tag1 trans-04 m-r-5 m-b-5">
                                    Denim
                                </a>

                                <a href="#" class="flex-c-m stext-107 cl6 size-301 bor7 p-lr-15 hov-tag1 trans-04 m-r-5 m-b-5">
                                    Streetstyle
                                </a>

                                <a href="#" class="flex-c-m stext-107 cl6 size-301 bor7 p-lr-15 hov-tag1 trans-04 m-r-5 m-b-5">
                                    Crafts
                                </a>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Filter</button>
                        <br />
                        <br />
                        <button type="submit" class="btn btn-danger" asp-route-Brand="brand" asp-route-Size="size" asp-route-Color="color">Clear</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row isotope-grid">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                    <!-- Block2 -->
                    <div class="block2">
                        <div class="block2-pic hov-img0">
                            <!--Need to put a picture-->
                            <img src="@item.Urlimage" />
                        </div>

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a asp-action="Details" asp-route-id="@item.ProductId" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </a>

                                <span class="stext-105 cl3">
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </span>
                            </div>

                            <div class="block2-txt-child2 flex-r p-t-3">
                                <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                    <img class="icon-heart1 dis-block trans-04" src="~/DesignShop/images/icons/icon-heart-01.png" alt="ICON">
                                    <img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/DesignShop/images/icons/icon-heart-02.png" alt="ICON">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>


        <!-- Load more -->
        <div class="flex-c-m flex-w w-full p-t-45">
            <a href="#" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                Load More
            </a>
        </div>
    </div>
</div>




