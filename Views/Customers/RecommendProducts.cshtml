<section class="sec-blog bg0 p-t-60 p-b-90">
    <div class="container">
        <div class="p-b-66">
            <h3 class="ltext-105 cl5 txt-center respon1">
                Recommendations especially for you from the BSOS team
            </h3>
        </div>

        <div class="row">
            @foreach (var p in Model)
            {
                <div class="col-sm-6 col-md-4 p-b-40">
                    <div class="blog-item">
                        <div class="hov-img0">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@p.pro.ProductId" >
                                <img src="@p.pro.Urlimage" alt="IMG-BLOG">
                            </a>
                        </div>

                        <div class="p-t-15">
                            <div class="stext-107 flex-w p-b-14">
                                <span class="m-r-3">
                                    <span class="cl4">
                                        From
                                    </span>

                                    <span class="cl5">
                                        BSOS TEAM
                                    </span>
                                </span>

                                @*<span>
                                    <span class="cl4">
                                        
                                    </span>

                                    <span class="cl5">
                                        July 22, 2017
                                    </span>
                                </span>*@
                            </div>

                            <h4 class="p-b-12">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@p.pro.ProductId" class="mtext-101 cl2 hov-cl1 trans-04">
                                   @p.pro.ProductName
                                </a>
                            </h4>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

@foreach (var p in Model)
{
    <div>@p.pro.ProductName</div>
    <br />
}


